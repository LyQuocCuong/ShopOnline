@using ShopOnline.Models.System.User.Dto
 
@model CreateUserDto

<p>Create User Page</p>


<div class="card shadow-lg border-0 rounded-lg mt-5">
    <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
    <div class="card-body">
        <form asp-controller="User" asp-action="CreateUser" method="post">
            <div class="form-check mb-3">
                <input class="form-control" asp-for="Fullname" type="text" placeholder="Username" />
                <label>Email address</label>
            </div>
            <div class="form-check mb-3">
                <input class="form-control" asp-for="Email" type="email" placeholder="Email" />
                <label>Email address</label>
            </div>
            <div class="form-check mb-3">
                <input class="form-control" asp-for="DOB" type="date" placeholder="DOB" />
                <label>Email address</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" asp-for="Username" type="text" placeholder="Username" />
                <label>Email address</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" asp-for="RawPassword" type="password" placeholder="RawPassword" />
                <label>Password</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" asp-for="ConfirmedRawPassword" type="password" placeholder="ConfirmedRawPassword" />
                <label>Confirm Password</label>
            </div>
            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                <a class="small" href="password.html">Forgot Password?</a>
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </form>
    </div>
</div>