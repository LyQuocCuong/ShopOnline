@using ShopOnline.Models.System.User.Dto

@model UserBasicInfoDto

<div class="card border-0">
    <div class="card-header">
        <h3 class="text-center font-weight-light my-4">Basic Info @ViewBag.Result</h3>
    </div>
    <div class="card-body">
        <form asp-controller="User" asp-action="Update" method="post">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-floating mb-3" hidden>
                        <input class="form-control" asp-for="UserId" type="text" />
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="FullName" type="text" placeholder="Full Name" />
                        <label>FullName</label>
                        <span style="color:red" asp-validation-for="FullName"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="Email" type="email" placeholder="Email" />
                        <label>Email</label>
                        <span style="color:red" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" asp-for="DOB" type="date" placeholder="DOB" />
                        <label>Date of Birth</label>
                        <span style="color:red" asp-validation-for="DOB"></span>
                    </div>
                    <div style="color:red">
                        @Html.ValidationMessage("Exception")
                    </div>
                </div>
            </div>
            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
        </form>
    </div>
</div>